{% extends "base.twig" %}

{% block content %}

    <article class="single-post">

        <h1>{{ post.title }}</h1>

        {% if post.thumbnail %}
            <img src="{{ post.thumbnail }}" alt="{{ post.title }}">
        {% endif %}

        <div class="meta">
            <span>Publié le {{ post.date }}</span>
            <span>par {{ post.author }}</span>
        </div>

        <div class="content">
            {{ post.content|raw }}
        </div>

        <div class="post-navigation">
            {% if navigation.prev %}
                <a href="{{ navigation.prev.url }}" class="prev-post">
                    ← {{ navigation.prev.title }}
                </a>
            {% endif %}

            {% if navigation.next %}
                <a href="{{ navigation.next.url }}" class="next-post">
                    {{ navigation.next.title }} →
                </a>
            {% endif %}
        </div>

    </article>

{% endblock %}
