{% extends "base.twig" %}

{% set page = get_page_context() %}

{% block content %}

    <section class="header-page">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1>{{ page.title }}</h1>

                    {% if page.thumbnail %}
                        <img src="{{ page.thumbnail }}" alt="{{ page.title }}">
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    <section class="content-page">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <p>{{ test }}</p>

                    <div class="wysiwyg">
                        {{ page.content|raw }}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
