{% extends "base.twig" %}

{% block content %}

    <section class="header-page">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1>{{ post.title }}</h1>

                    {% if post.thumbnail %}
                        <img src="{{ post.thumbnail }}" alt="{{ post.title }}">
                    {% endif %}

                    <div>
                        <span>Publié le {{ post.date }}</span>
                        <span>par {{ post.author }}</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="content-page">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="wysiwyg">
                        {{ post.content|raw }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="pagination-page">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="navigation">
                        {% if navigation.prev %}
                            <a href="{{ navigation.prev.url }}" class="prev-post">
                                ← {{ navigation.prev.title }}
                            </a>
                        {% endif %}
                        {% if navigation.next %}
                            <a href="{{ navigation.next.url }}" class="next-post">
                                {{ navigation.next.title }} →
                            </a>
                        {% endif %}
                    </nav>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
